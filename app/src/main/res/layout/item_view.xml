<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    android:layout_centerVertical="true"
    android:background="@drawable/asset_item_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/card_view_adapter"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/title"
            android:text="@string/asset_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/red_hat_display"
            android:textStyle="bold"
            android:textColor="@color/grey2"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/asset_item_name"
            android:text="@string/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginBottom="5dp"
            android:layout_alignStart="@id/title"
            android:fontFamily="@font/red_hat_display"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16sp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/edit_asset_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/edit_asset_item_icon" />

        <TextView
            android:id="@+id/line1"
            android:layout_alignStart="@id/title"
            android:layout_alignEnd="@id/edit_asset_button"
            android:layout_marginTop="5dp"
            android:alpha="0.5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/asset_item_name"
            android:background="@color/grey2" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>